<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainfragments.AddTripFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#3fff"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add Trip"
            android:layout_marginTop="-90dp"
            android:textSize="40dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/tripName_input"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:paddingLeft="14dp"
            android:ems="10"
            android:hint="Name of trip"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/tripDate_input"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:paddingLeft="14dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Date of trip"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tripName_input"  />

        <EditText
            android:id="@+id/tripDescription_input"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:paddingLeft="14dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Decription of trip"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tripDate_input" />

        <Button
            android:id="@+id/add_icon"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:text="Add new trip"
            android:textSize="20sp"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description_input" />

    </LinearLayout>

</FrameLayout>